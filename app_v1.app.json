{
    "name": "ideas app",
    "models": {
        "category":{
            "default":{
                "name":{"type":"str", "max":20, "required":true}
            }
        },
        "user":{
            "create":{
                "name":{"type":"str", "max":20, "required":true},
                "email":{"type":"email", "max":20, "required":true},
                "password":{"type":"password", "max":100, "required":false},
                "interests":{"repeated":true, "type":"category", "max":10}
            },
            "read":{
                "__extends":{
                    "from":"create",
                    "__excludes":["password"]
                }
            },
            "get":{
                "__extends":{
                    "from":"create"
                }
            }
        },
        "organization":{
            "create":{
                "name":{"type":"str", "max":20, "required":true},
                "members":{},
                "password":{"type":"password", "max":100, "required":false},
                "interests":{"repeated":true, "type":"category", "max":10}
            }
        },
        "question":{
            "create":{
                "text":{"type":"str","max":20},
                "categories":{"repeated":true, "type":"category","max":10, "min":1}
            }
        },
        "ideas":{
            "create":{
                "owner":{"type":"user","required":true},
                "title":{"type":"str", "max":20, "required":true},
                "description":{"type":"str", "max":3000, "required":true},
                "questions":{"repeated":true, "type":"question", "max":20, "required":true}
            }
        },
        "projects":{
            "create":{
                "name":{"type":"str", "max":20, "required":true},
                "email":{"type":"email", "max":20, "required":true},
                "password":{"type":"password", "max":100, "required":false},
                "interests":{"repeated":true, "type":"category", "max":10}
            }
        }
    },
    "services": {
        "questions":{
            "endpoints":{
                "create":{
                    "request":{
                        "question" : {"type": "question.create"}
                    }
                }
            }
            
        }
    }
}